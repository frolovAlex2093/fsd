extends ../main-ui-layout/main-ui-layout

include ../../blocks/logo/logo
include ../../blocks/text-field/text-field
include ../../blocks/btn-long/btn-long
include ../../blocks/rate-button/rate-button
include ../../blocks/like-button/like-button
include ../../blocks/advantages/advantages
include ../../blocks/bullet-list/bullet-list
include ../../blocks/btn-colorful/btn-colorful
include ../../blocks/btn-transparent/btn-transparent
include ../../blocks/btn-text/btn-text
include ../../blocks/comment/comment
include ../../blocks/radio-btn/radio-btn
include ../../blocks/toggle-btn/toggle-btn
include ../../blocks/checkbox/checkbox
include ../../blocks/expander/expander
include ../../blocks/pagination/pagination
include ../../blocks/slider/slider
include ../../blocks/dropdown/dropdown

block content

    .form-elements__logo
        +logo

    .form-elements
        +dropdown({result: "Сколько гостей", items: ["взрослые", "дети", "младенцы"], quantity: [3, 5, 1], btn: true})
        .form-elements__box
            +text-field({placeholder: "Email", type: "email"})
        .form-elements__box
            +slider({
                title: "Range slider",
                type: "double",
                min: "500",
                max: "15000",
                from: "5000",
                to: "10000"
            })
            +btn-colorful({text: "click me"})
            +btn-transparent({text: "войти"})
            +btn-text({text: "click me"})
            +btn-long({text: "перейти к оплате"})
            +checkbox({items: [
                    {label: "Можно курить", checked: false},
                    {label: "Можно с питомцами", checked: true},
                    {label: "Можно пригласить гостей (до 10 человек)", checked: true},
                ]})
            +checkbox({items: [
                {label: "Широкий коридор", description: "Ширина коридоров в номере не менее 91 см.", checked: false},
                {label: "Помощник для инвалидов", description: "На 1 этаже вас встретит специалист  и проводит до номера.", checked: false}
                ]})
            +radio-btn({items: [
                    {label: "Мужчина", name: "gender", checked: true},
                    {label: "Женщина", name: "gender", checked: false}]})
            +toggle-btn({items:[
                    {label: "Получать спецпредложения", name: "tog1", checked: false},
                    {label: "Получать спецпредложения", name: "tog1", checked: true}]})
        .form-elements__box
            +rate-button({check: [true, true, true, false, false]})
            +rate-button({check: [true, true, true, true, true]})
        .form-elements__box
            +like-button({check: true, count: "2"})
            +like-button({check: false, count: "12"})
            +advantages({icon: "insert_emoticon", title: "Комфорт", text: "Шумопоглощающие стены"})
            +advantages({icon: "location_city", title: "Удобство", text: "Окно в каждой из спален"})
            +bullet-list({text: "Нельзя с питомцами"})
            +bullet-list({text: "Без вечеринок и мероприятий"})
            +bullet-list({text: "Время прибытия — после 13:00, а выезд до 12:00"})

            +pagination({pages: [
                    {number: "1", checked: true},
                    {number: "2", checked: false},
                    {number: "3", checked: false},
                    {number: "...", checked: false},
                    {number: "15", checked: false},
                    {number: "arrow_forward", checked: false},
                ]})

            +comment({
                text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, " +
                    "действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей. ",
                name: "Мурад Сарафанов", date: "5 дней назад", check: false, count: 12, img: "man"
            })

            +expander({
                title: "Expandable checkbox list",
                list: [
                    {text: "Завтрак", checked: false},
                    {text: "Письменный стол", checked: true},
                    {text: "Стул для кормления", checked: true},
                    {text: "Кроватка", checked: true},
                    {text: "Телевизор", checked: false},
                    {text: "Шампунь", checked: false},
                    {text: "Телевизор", checked: false},
                    {text: "Шампунь", checked: false},
                ]})
            +expander({
                title: "Expandable checkbox list",
                list: [
                    {text: "Завтрак", checked: false},
                    {text: "Письменный стол", checked: true},
                    {text: "Стул для кормления", checked: true},
                    {text: "Кроватка", checked: true},
                    {text: "Телевизор", checked: false},
                    {text: "Шампунь", checked: false},
                    {text: "Телевизор", checked: false},
                    {text: "Шампунь", checked: false}],
                hide: true
            })

