extends ../main-ui-layout/main-ui-layout

include ../../blocks/logo/logo
include ../../blocks/text-field/text-field
include ../../blocks/btn-long/btn-long
include ../../blocks/rate-button/rate-button
include ../../blocks/like-button/like-button
include ../../blocks/advantages/advantages
include ../../blocks/bullet-list/bullet-list
include ../../blocks/btn-colorful/btn-colorful
include ../../blocks/btn-transparent/btn-transparent
include ../../blocks/btn-text/btn-text
include ../../blocks/comment/comment
include ../../blocks/radio-btn/radio-btn

block content

    .form-elements__logo
        +logo

    .form-elements
        .form-elements__box
            +text-field
        .form-elements__box
            +btn-colorful({text: "click me"})
            +btn-transparent({text: "войти"})
            +btn-text({text: "click me"})
            +btn-long({text: "перейти к оплате"})
            +radio-btn()
        .form-elements__box
            +rate-button({check:[true, true, true, false, false]})
        .form-elements__box
            +like-button({check: true, count: "2"})
            +like-button({check: false, count: "12"})
            +advantages({icon: "insert_emoticon", title: "Комфорт", text: "Шумопоглощающие стены"})
            +advantages({icon: "location_city", title: "Удобство", text: "Окно в каждой из спален"})
            +bullet-list({text: "Нельзя с питомцами"})
            +bullet-list({text: "Без вечеринок и мероприятий"})
            +bullet-list({text: "Время прибытия — после 13:00, а выезд до 12:00"})

            +comment({text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, " +
                    "действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей. "})