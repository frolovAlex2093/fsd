extends ../main-ui-layout/main-ui-layout

include ../../blocks/color/color
include ../../blocks/logo/logo
include ../../blocks/type/type

block content

    .color-type
        .color-type__logo
            +logo
        .color-type__box
            .color-type__colors
                +color({color:"#1F2041", name: "Dark Shade", opas: "100" })
                +color({color:"#1F2041", name: "Dark Shade", opas: "75" })
                +color({color:"#1F2041", name: "Dark Shade", opas: "50" })
                +color({color:"#1F2041", name: "Dark Shade", opas: "25" })
                +color({color:"#1F2041", name: "Dark Shade", opas: "5" })
                +color({color:"#1F2041", name: "Purple" })
                +color({color:"#1F2041", name: "Green"})
            .color-type__types
                +type({size: "H1", text: "This one is the sub-section or widget title"})
                +type({size: "H2", text: "Next one is the item title inside widgets"})
                +type({size: "H3", text: "This is a label or CTA text"})
                +type({size: "Body", text: "This is the body text which is used for most of the design, like paragraphs, lists, etc."})


